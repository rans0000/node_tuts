<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/mainmenu.ejs') %>
            <h1>All Blogs</h1>

            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <h4><%= blog.title %></h4>
                    <i><%= blog.snippet %></i>
                <% }) %>
            <% } else { %>
                <p>No contents yet...</p>
            <% } %>
    </body>

</html>